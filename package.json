{
  "name": "scheduler-polyfill",
  "version": "1.3.0-beta.0",
  "description": "Polyfill of self.scheduler API",
  "main": "./dist/scheduler-polyfill.js",
  "module": "./dist/scheduler-polyfill.js",
  "directories": {
    "doc": "docs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "microbundle --raw -f iife src/polyfill.js",
    "lint": "eslint src test",
    "test": "karma start --single-run --browsers ChromeHeadless karma.conf.js"
  },
  "homepage": "https://github.com/GoogleChromeLabs/scheduler-polyfill",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GoogleChromeLabs/scheduler-polyfill.git"
  },
  "bugs": {
    "url": "https://github.com/GoogleChromeLabs/scheduler-polyfill/issues"
  },
  "browserslist": [
    "supports es6-module"
  ],
  "author": "The Chromium Authors",
  "license": "Apache-2.0",
  "keywords": [
    "scheduler",
    "scheduling",
    "postTask",
    "TaskController",
    "TaskSignal"
  ],
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.32.0",
    "eslint-config-google": "^0.14.0",
    "karma": "^6.4.2",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "microbundle": "^0.15.1",
    "mocha": "^10.2.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "mocha": true,
      "es6": true
    },
    "globals": {
      "expect": true,
      "assert": true
    },
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    }
  }
}
